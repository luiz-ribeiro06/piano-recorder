<%- include('./partials/header.ejs') %>

<main class="container-md mt-4">
    <h1>Welcome to Piano Recorder!</h1>

    <div class="mt-4 d-flex justify-content-center gap-3">
        <button id="start-record" class="btn btn-primary">Start Recording</button>
        <button id="stop-record" class="btn btn-secondary" disabled>Stop Recording</button>
    </div>

    <div class="w-100 d-flex justify-content-center mt-4">
        <div id="piano-wrap"></div>
    </div>

    <p class="mt-4">
        Play on your digital piano to see the notes on the virtual keyboard above.
    </p>
</main>

<div class="modal fade" id="saveRecordingModal" tabindex="-1" aria-labelledby="saveRecordingModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="saveRecordingModalLabel">Save Your Recording</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label for="modal-recording-title" class="form-label">Recording Title</label>
          <input type="text" id="modal-recording-title" class="form-control" placeholder="Enter a title for your recording" required>
        </div>
        <div class="mb-3">
          <label for="modal-recording-artist" class="form-label">Artist (Optional)</label>
          <input type="text" id="modal-recording-artist" class="form-control" placeholder="Enter the artist name">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="save-recording-btn">Save</button>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/midi-init.js"></script>
<script src="/js/qwerty-hancock.js"></script>
<script src="/js/piano-visual.js"></script>
<script src="/js/recorder-buttons.js"></script>

</body>
</html>
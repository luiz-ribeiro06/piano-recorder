<%- include('./partials/header.ejs') %>

<main class="container-md mt-4">
    <h1>My Recordings</h1>
    <p>Here are your saved piano recordings. You can edit or delete them.</p>

    <div class="row">
        <% recordings.forEach(recording => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= recording.title %></h5>
                        <p class="card-text">
                            <strong>Artist:</strong> <%= recording.artist || 'Unknown' %><br>
                            <strong>Date:</strong> <%= new Date(recording.date).toLocaleDateString() %>
                        </p>
                        <button class="btn btn-primary btn-sm play-btn" data-id="<%= recording._id %>" data-title="<%= recording.title %>">Play</button>
                        <button class="btn btn-warning btn-sm edit-btn" data-id="<%= recording._id %>" data-title="<%= recording.title %>" data-artist="<%= recording.artist %>">Edit</button>
                        <button class="btn btn-danger btn-sm delete-btn" data-id="<%= recording._id %>">Delete</button>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

    <!-- Piano -->
    <div class="modal fade" id="playbackModal" tabindex="-1" aria-labelledby="playbackModalLabel" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="playbackModalLabel">Playing: <span id="playing-title"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="w-100 d-flex justify-content-center mt-4">
                        <div id="piano-wrap"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close & Stop</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Editar gravação-->
    <div class="modal fade" id="editRecordingModal" tabindex="-1" aria-labelledby="editRecordingModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editRecordingModalLabel">Edit Recording</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="edit-title" class="form-label">Recording Title</label>
                        <input type="text" id="edit-title" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="edit-artist" class="form-label">Artist (Optional)</label>
                        <input type="text" id="edit-artist" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="save-edit-btn">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('./partials/footer.ejs') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/midi-init.js"></script>
<script src="/js/qwerty-hancock.js"></script>
<script src="/js/piano-visual.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const playbackModal = new bootstrap.Modal(document.getElementById('playbackModal'));
        const editModal = new bootstrap.Modal(document.getElementById('editRecordingModal'));
        let currentEditId = null;
        let playbackTimeouts = [];

        const stopPlayback = () => {
            playbackTimeouts.forEach(clearTimeout);
            playbackTimeouts = [];
            window.isPlayingBack = false;
            
            document.querySelectorAll('.active-key').forEach(key => {
                key.classList.remove('active-key');
            });
        };

        document.getElementById('playbackModal').addEventListener('hidden.bs.modal', stopPlayback);

        document.querySelectorAll('.play-btn').forEach(btn => {
            btn.addEventListener('click', async (e) => {
                const id = e.target.dataset.id;
                const title = e.target.dataset.title;
                
                stopPlayback();
                document.getElementById('playing-title').innerText = title;
                playbackModal.show();

                try {
                    const response = await fetch(`/recordings/${id}/events`);
                    if (!response.ok) throw new Error('Failed to fetch events');
                    const data = await response.json();
                    const events = data.events;

                    window.isPlayingBack = true;

                    events.forEach(event => {
                        const timeout = setTimeout(() => {
                            document.dispatchEvent(new CustomEvent("midi:note", {
                                detail: { type: event.type, noteNumber: event.note }
                            }));
                        }, event.time);
                        playbackTimeouts.push(timeout);
                    });
                } catch (err) {
                    console.error('Error playing recording:', err);
                    alert('Error playing recording.');
                    playbackModal.hide();
                }
            });
        });

        // Editar e deletar
        document.querySelectorAll('.edit-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                currentEditId = e.target.dataset.id;
                document.getElementById('edit-title').value = e.target.dataset.title;
                document.getElementById('edit-artist').value = e.target.dataset.artist;
                editModal.show();
            });
        });

        document.getElementById('save-edit-btn').addEventListener('click', async () => {
            const title = document.getElementById('edit-title').value.trim();
            const artist = document.getElementById('edit-artist').value.trim();
            if (!title) return alert('Title is required.');
            try {
                const response = await fetch(`/recordings/${currentEditId}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ title, artist })
                });
                if (response.ok) location.reload();
            } catch (err) { console.error(err); }
        });

        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                if (confirm('Are you sure?')) {
                    fetch(`/recordings/${e.target.dataset.id}`, { method: 'DELETE' })
                        .then(res => res.ok && location.reload());
                }
            });
        });
    });
</script>